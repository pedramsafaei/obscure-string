{
  "name": "obscure-string",
  "version": "2.0.0",
  "description": "Professional-grade string obscuration with security, performance, and reliability. Zero dependencies. Mask sensitive data in logs, APIs, and UIs.",
  "main": "index.js",
  "types": "index.d.ts",
  "files": [
    "index.js",
    "index.d.ts",
    "src/",
    "bin/",
    "README.md",
    "LICENSE",
    "SECURITY.md"
  ],
  "scripts": {
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:benchmark": "jest __tests__/benchmark.test.js",
    "build": "mkdir -p dist && cp src/index.js dist/index.js && cp index.d.ts dist/index.d.ts",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "npm run format",
    "release": "standard-version",
    "release:patch": "standard-version --release-as patch",
    "release:minor": "standard-version --release-as minor",
    "release:major": "standard-version --release-as major",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "deploy:docs": "vitepress build docs && gh-pages -d docs/.vitepress/dist"
  },
  "bin": {
    "obscure-string": "bin/index.js"
  },
  "keywords": [
    "mask",
    "obscure",
    "string",
    "censor",
    "hide",
    "redact",
    "log",
    "secret",
    "obfuscate",
    "logging",
    "sanitize",
    "privacy",
    "security",
    "gdpr",
    "pii",
    "sensitive",
    "data-protection",
    "email-mask",
    "phone-mask",
    "api-key",
    "token",
    "credential",
    "audit",
    "compliance",
    "hipaa",
    "pci-dss"
  ],
  "author": "Pedram Safaei <pedramcodes@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/pedramsafaei/obscure-string"
  },
  "bugs": {
    "url": "https://github.com/pedramsafaei/obscure-string/issues"
  },
  "homepage": "https://github.com/pedramsafaei/obscure-string#readme",
  "devDependencies": {
    "gh-pages": "^6.3.0",
    "jest": "^29.7.0",
    "jest-html-reporter": "^4.1.0",
    "prettier": "^3.5.3",
    "standard-version": "^9.5.0",
    "vitepress": "^1.6.3"
  },
  "engines": {
    "node": ">=14"
  }
}
